# Marketing Agent - Environment Variables
# このファイルを .env にコピーして使用してください

# Database Configuration
# SQLiteの場合（開発環境）
DATABASE_URL="file:./prisma/dev.db"

# PostgreSQLの場合（本番環境推奨）
# DATABASE_URL="postgresql://username:password@localhost:5432/marketing_agent"

# MySQL/MariaDBの場合
# DATABASE_URL="mysql://username:password@localhost:3306/marketing_agent"

# Google Gemini AI API Configuration
# https://makersuite.google.com/app/apikey から取得
GEMINI_API_KEY="your_gemini_api_key_here"

# App Configuration
NODE_ENV="development"

# Rate Limiting Configuration (optional)
RATE_LIMIT_REQUESTS_PER_MINUTE="10"
RATE_LIMIT_TOKENS_PER_MINUTE="50000"

# Logging Configuration (optional)
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Security Configuration (optional)
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Performance Configuration (optional)
MAX_WORKFLOW_DURATION_MINUTES="30"
AGENT_TIMEOUT_MINUTES="5"
AGENT_RETRY_COUNT="3"